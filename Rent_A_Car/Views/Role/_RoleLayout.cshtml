@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item-5">
                        <a class="nav-link" href='/Role/CreateRole'>Create Role</a>
                    </li>
                    <li class="nav-item-5">
                        <a class="nav-link" href='/Role/EditRole'>Edit Role</a>
                    </li>
                    <li class="nav-item-5">
                        <a class="nav-link" href='/Role/DeleteRole'>Delete</a>
                    </li>
                    <li class="nav-item-5">
                        <a class="nav-link" href="/Role/ListRole">List Role</a>
                    </li>
                    <li class="nav-item-5">
                        <a class="nav-link" href="/Role/AddUserToRole">Edit User Role</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        });
    </script>
}